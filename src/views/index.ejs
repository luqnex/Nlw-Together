<body>
    <div id="home" class="content">
        <header>
            <img src="./Imagens/logo.svg" alt="Logo Rockeat.Q">
        </header>
    
        <div id="bg">
            <div class="ball top"></div>
            <div class="ball bottom"></div>
        </div>

        <main>
            <div class="container">
                <section>
                   <h2>Entre como participante</h2>
                   <form action="">
                       <label class="sr-only" for="room-id">Codigo da sala</label>
                       <input id="room-id" type="number" placeholder="Código da sala">
                       <button>
                           <img src="./Imagens/enter-room.svg" alt="Entrar na sala">
                           Entrar na Sala
                        </button>
                   </form> 
                </section>
    
                <div class="separator">
                    <div></div>
                    <div><p>ou</p></div>
                    <div></div>
                </div>
    
                <section>
                    <h2>Crie sua própria sala de forma facil</h2>
                    <a class="button outlined" href="create-room.html">
                        <img src="./Imagens/users.svg" alt="Criar sala">Criar sala
                    </a>
                </section>
            </div>
        </main>
    </div>
</body>
